---
import HeaderLink from "./HeaderLink.astro"
import { Image } from "astro:assets";
import { STOREPAGE_URL } from "../config";

const aspectRatio = 0.9881422925 
const width = 500 * 2
const height = width / aspectRatio
---
<header class="fixed w-full py-2 backdrop-blur-xl z-20">
  <section class="max-w-4xl mx-auto">
    <div class="flex px-4">
      <a href="/" class="my-1">
        <Image
          class="max-w-44 max-h-12 w-full object-cover" 
          src="/tcm-logo.webp" 
          width={width}
          height={height}
          loading="eager"
          decoding="sync"
          alt="Logo Team cellmania">
      </a>
      <span class="flex-1"></span>
      <nav class="flex flex-row gap-1 items-center">
        <HeaderLink class="group px-3 py-2 rounded-lg hover:bg-orange-200 opacity-60 hover:opacity-100 transition-all" href={"/contenido"}>Contenido</HeaderLink>
        <HeaderLink class="group px-3 py-2 rounded-lg hover:bg-orange-200 opacity-60 hover:opacity-100 transition-all" href={"/social"}>Redes</HeaderLink>
        <a class="group px-3 py-2 rounded-lg hover:bg-orange-200 opacity-60 hover:opacity-100 transition-all" href={STOREPAGE_URL} target="_blank">Tienda</a>
      </nav>
    </div>
  </section>
</header>

