---
import HeaderLink from "./HeaderLink.astro"
import { Image } from "astro:assets";

const aspectRatio = 0.9881422925 
const width = 500 * 2
const height = width / aspectRatio
---
<header class="fixed w-full py-2 backdrop-blur-xl z-20">
  <section class="max-w-4xl mx-auto">
    <div class="flex px-4">
      <a href="/" class="my-1">
        <Image
          class="max-w-44 max-h-12 w-full object-cover" 
          src="/tcm-logo.webp" 
          width={width}
          height={height}
          loading="eager"
          decoding="sync"
          alt="Logo Team cellmania">
      </a>
      <span class="flex-1"></span>
      <nav class="text-white flex flex-row gap-1 items-center">
        <HeaderLink class="px-4 py-2 rounded-lg hover:bg-gray-bg opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity" href={"/contenido"}>Contenido</HeaderLink>
        <HeaderLink class="px-4 py-2 rounded-lg hover:bg-gray-bg opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity" href={"/social"}>Redes</HeaderLink>
        <a class="px-4 py-2 rounded-lg hover:bg-gray-bg opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity" href={"https://teamcellmania.com/products"} target="_blank">Tienda</a>
      </nav>
    </div>
  </section>
</header>

